---
import BaseLayout from "../layouts/BaseLayout.astro";
import { formatDateEt } from "../utils/date";
const { frontmatter } = Astro.props;
const title = frontmatter?.title;
const pubDate = frontmatter?.pubDate;
---

<BaseLayout title={title}>
    <main class="container hero md-main">
        {title && <h1 class="md-title">{title}</h1>}
        <div class="post-meta-row">
            <nav class="breadcrumb" aria-label="Breadcrumb">
                <a class="breadcrumb__pill" href="/kirjutised">Kirjutised</a>
            </nav>
            {pubDate && <p class="post-date">{formatDateEt(pubDate)}</p>}
        </div>
        <slot />
    </main>
</BaseLayout>
