---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.scss";

const {
  title = "MuISi abiline - Märgistamislahendus Muuseumide Infosüsteemile",
} = Astro.props;
---

<!doctype html>
<html lang="et">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="MuISi abiline kiirendab inventuuri ja võimaldab printida museaalidele märgised otse MuISi keskkonnast ilma muud tarkvara kasutamata."
    />
    <title>{title}</title>
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
  </head>
  <body id="top" class="page-shell">
    <Header />
    <slot />
    <Footer />
    <a class="back-to-top" href="#top" aria-label="Tagasi lehe algusesse">↑</a>
    <script>
      (() => {
        const root = document.documentElement;
        const toggle = () => {
          const shouldShow = window.scrollY > window.innerHeight;
          root.classList.toggle("show-back-to-top", shouldShow);
        };
        toggle();
        window.addEventListener("scroll", toggle, { passive: true });
        window.addEventListener("resize", toggle);
      })();
    </script>
    <!-- 100% privacy-first analytics -->
    <script async src="https://scripts.simpleanalyticscdn.com/latest.js"
    ></script>
  </body>
</html>
